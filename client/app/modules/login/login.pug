.container
  .row
    .col-sm-12.col-md-6.col-md-offset-3
      h1 Login
      form.form(name='form', ng-submit='$ctrl.login(form)', novalidate='', ng-model-options="{'updateOn': 'default blur', 'debounce': {'default': 200, 'blur': 0}}", autocomplete='on')
        .form-group
          label Email
          input.form-control(type='email', id='email', name='email', ng-model='$ctrl.user.email', autofocus='', required='', autocomplete='email', maxlength='80', placeholder='Email address')
          ng-messages.help-block.has-error(for='form.email.$error', ng-show='form.email.$dirty || form.$submitted', role='alert')
            ng-message(when='required') Please provide an email address.
            ng-message(when='email') Please supply a valid email address.
        .form-group
          label Password
          input.form-control(type='password', id='password', name='password', ng-model='$ctrl.user.password', required='', autocomplete='current-password', maxlength='20', placeholder='Password')
          ng-messages.help-block.has-error(for='form.password.$error', ng-show='form.password.$dirty || form.$submitted', role='alert')
            ng-message(when='required') Please enter your password.
        .form-group.has-error
          p.help-block {{ $ctrl.errors.login }}
        button.btn.btn-lg.btn-warning.pull-left(type='submit') Login 
        google-button
        a.btn.btn-default.btn-lg.btn-register.pull-right(href='/signup') Sign up
        br
        br
        a(ng-click='$ctrl.forgotPassword()') Forgot password?
