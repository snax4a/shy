.model-content
  .modal-header
    button.close(type='button', ng-click='$ctrl.cancel()') &times;
    h2#modal-label.modal-title {{ $ctrl.firstName }} {{ $ctrl.lastName }}
  .modal-body
    div(style='padding-bottom: 15px;')
      div(ng-if='$ctrl.imageId', style='width:50%;')
        img.img-responsive.pull-left(ng-src='/api/file/{{ $ctrl.imageId }}', alt='Photo of Teacher', style='position:relative;top:-10px;border: 1px solid lightgray;margin-bottom: 10px;margin-right: 15px;')
      | {{ $ctrl.bio }} 
      a(ng-if='$ctrl.url', href='{{ $ctrl.url }}', target='_blank') Visit {{ $ctrl.firstName }}&apos;s website