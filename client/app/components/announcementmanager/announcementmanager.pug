.row.tab-spacer
  .col-md-12
    a.btn.btn-warning(ng-click='$ctrl.createAnnouncement()')
      span.fas.fa-plus-circle
      |&nbsp;New Announcement
    p(ng-show='$ctrl.announcements.length==0') No announcements
    table.table.table-striped(ng-hide='$ctrl.announcements.length==0')
      thead
        th Section (click to edit)
        th Title
        th Description
        th Expires
        th 
      tbody
        tr(ng-repeat='announcement in $ctrl.announcements')
          td
            a.edit(ng-click='$ctrl.editAnnouncement(announcement)')
              span.fas.fa-pencil-alt 
              |&nbsp;&nbsp;{{ announcement.section }}
          td
            a.edit(ng-click='$ctrl.editAnnouncement(announcement)') {{ announcement.title }}
          td
            a.edit(ng-click='$ctrl.editAnnouncement(announcement)') {{ announcement.description }}
          td
            a.edit(ng-click='$ctrl.editAnnouncement(announcement)') {{ announcement.expires | date: 'd-MMM-yy' }}
          td
            a.trash(ng-click='$ctrl.deleteAnnouncement(announcement)')
              span.far.fa-trash-alt.pull-right
