.container
  .row
    .col-sm-12.col-md-6.col-md-offset-3
      h1 Login
      form.form(name='form', ng-submit='$ctrl.login(form)', novalidate='', ng-model-options="{'updateOn': 'default blur', 'debounce': {'default': 200, 'blur': 0}}")
        .form-group
          label Email
          input.form-control(type='email', name='email', ng-model='$ctrl.user.email', autofocus='')
        .form-group
          label Password
          input.form-control(type='password', name='password', ng-model='$ctrl.user.password')

        .form-group.has-error
          p.help-block(ng-show='form.email.$error.required && form.password.$error.required && $ctrl.submitted')
            | Please enter your email and password.
          p.help-block {{ $ctrl.errors.login }}
          
        button.btn.btn-lg.btn-warning.pull-left(type='submit') Login 
        google-button
        a.btn.btn-default.btn-lg.btn-register.pull-right(href='/signup') Sign up
        br
        br
        a(ng-click='$ctrl.forgotPassword()') Forgot password?
