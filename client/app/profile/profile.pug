.container
  .row
    .col-sm-12.col-md-6.col-md-offset-3
      h2 User Profile Settings
      form.form(name='form', ng-submit='$ctrl.changePassword(form)', novalidate='', ng-model-options="{'updateOn': 'default blur', 'debounce': {'default': 200, 'blur': 0}}")
        .form-group
          label Current Password
          input.form-control(type='password'
            name='password'
            ng-model='$ctrl.user.oldPassword'
            sequelize-error='', autofocus='')
          p.help-block(ng-show='form.password.$error.sequelize')
            | {{ $ctrl.errors.other }}
        .form-group
          label New Password
          input.form-control(type='password'
            name='newPassword'
            ng-model='$ctrl.user.newPassword'
            ng-minlength='3', required='')
          p.help-block(ng-show='(form.newPassword.$error.minlength || form.newPassword.$error.required) && (form.newPassword.$dirty || $ctrl.submitted)')
            | Password must be at least 3 characters.
        .form-group
          label Confirm New Password
          input.form-control(type='password'
            name='confirmPassword'
            ng-model='$ctrl.user.confirmPassword'
            match="$ctrl.user.newPassword"
            ng-minlength='3', required='')
          p.help-block(ng-show='form.confirmPassword.$error.match && $ctrl.submitted')
            | Passwords must match.

        p.help-block
          br
          | {{ $ctrl.message }}

        button.btn.btn-lg.btn-warning(type='submit') Update
