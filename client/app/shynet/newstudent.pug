form(name='form', ng-submit="$ctrl.createStudent(form)", novalidate='', ng-model-options="{'updateOn': 'default blur', 'debounce': {'default': 200, 'blur': 0}}")
  .modal-header
    button.close(type='button', aria-label='Close' ng-click='$ctrl.cancel()')
      span(aria-hidden='true') &times;
    h4.modal-title New Student
  .modal-body
    .row
      .form-group.col-md-12
        label(for='firstName') First name
        input.form-control(name='firstName', id='firstName', type='text', maxlength='20', autofocus='', required='', placeholder='First name')
        ng-messages.help-block.has-error(for='form.firstName.$error', ng-show='form.firstName.$dirty || form.$submitted', role='alert')
          ng-message(when='required') Please provide a first name.
      .form-group.col-md-12
        label(for='lastName') Last name
        input.form-control(name='lastName', id='lastName', type='text', maxlength='20', required='', placeholder='Last name')
        ng-messages.help-block.has-error(for='form.lastName.$error', ng-show='form.lastName.$dirty || form.$submitted', role='alert')
          ng-message(when='required') Please provide a last name.
      .form-group.col-md-12
        label(for='email') Email address
        input.form-control(name='email', id='email', type='email', maxlength='80', required='', placeholder='Email address')
        ng-messages.help-block.has-error(for='form.email.$error', ng-show='form.email.$dirty || form.$submitted', role='alert')
          ng-message(when='required') Please provide an email address.
          ng-message(when='email') Please provide a valid email address.
  .modal-footer
    button.btn.btn-default(id='cancel', type='button', ng-click="$ctrl.cancel()") Cancel
    button.btn.btn-warning(id='save', type='submit', style='width:70px;') Save
