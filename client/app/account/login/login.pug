.container
  .row
    .col-sm-12.col-md-6.col-md-offset-3
      h2 Login
      form.form(name='form', ng-submit='vm.login(form)', novalidate='')
        .form-group
          label Email
          input.form-control(type='email', name='email', ng-model='vm.user.email', autofocus='')
        .form-group
          label Password
          input.form-control(type='password', name='password', ng-model='vm.user.password')

        .form-group.has-error
          p.help-block(ng-show='form.email.$error.required && form.password.$error.required && vm.submitted')
            | Please enter your email and password.
          p.help-block {{ vm.errors.login }}
          
          button.btn.btn-lg.btn-warning.pull-left(type='submit', style='width:131px;margin-right:10px;') Login 
          oauth-buttons.pull-left
          a.btn.btn-default.btn-lg.btn-register.pull-right(ui-sref='signup') Register
